<h1><%= @chatroom.name %></h1>
<div id="messages" data-chatroom-id="<%= @chatroom.id %>">
  <% @chatroom.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.first_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
      <% if policy(message).destroy? %>
      <small> <%= link_to 'supprimer le message',  chatroom_message_path(message), method: :delete, data: { confirm: 'êtes vous sûr ?'} %></small>
      <% end %>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Ecrivez votre message" %>
   <%= f.submit %>
<% end %>

