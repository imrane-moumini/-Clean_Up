<div class= "top-title-d">
  <p>MES RESERVATIONS</p>
</div>
<div class="container">
<div class="container-center">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">A venir</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Passé</button>
    </li>
  </ul>
</div>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
  <% @bookings.each do |booking| %>
      <% if booking.task_accomplished == false %>
        <%= link_to recap_path(booking) do %>
          <div class="card-dash">
            <div class= "green">
              <h3><%= booking.start_time.strftime("%b")%>  <br> <%= booking.start_time.strftime("%d")%>  </h3>
            </div>
            <div class="card-dash-infos-green">
              <h2> <%= booking.slot.user.first_name%> <%= booking.slot.user.last_name%></h2>
              <p>De <%= booking.start_time.strftime("%H:00") %> à <%= booking.end_time.strftime("%H:00") %> <br> <%= booking.slot.user.address %></p>
            </div>
            <%= cl_image_tag booking.slot.user.photo.key, class: "avatar-carre-small" %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <% @bookings.each do |booking| %>
      <% if booking.task_accomplished == true %>
        <%= link_to recap_path(booking) do %>
          <div class="card-dash">
            <div class= "gray">
              <h3><%= booking.start_time.strftime("%b")%>  <br> <%= booking.start_time.strftime("%d")%>  </h3>
            </div>
            <div class="card-dash-infos">
              <h2> <%= booking.slot.user.first_name%> <%= booking.slot.user.last_name%></h2>
              <p>De <%= booking.start_time.strftime("%H:00") %> à <%= booking.end_time.strftime("%H:00") %> <br> <%= booking.slot.user.address %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
</div>

